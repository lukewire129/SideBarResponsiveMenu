<james:DarkThemeWindow
    x:Class="DemoApp.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:james="https://jamesnet.dev/xaml/presentation"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:units="clr-namespace:SideBarResponsiveMenu.UI.Units;assembly=SideBarResponsiveMenu"
    Width="600"
    Height="800"
    Background="#615f5f"
    TitleBarColor="#615f5f"
    mc:Ignorable="d">
    <james:JamesGrid Columns="*,*" Rows="*">
        <units:SidebarMenu x:Name="SidebarMenu" ItemSource="{Binding SampleDatas}" />
        <Button
            x:Name="btn"
            Width="100"
            Height="50"
            HorizontalAlignment="Right"
            VerticalAlignment="Top"
            Click="Button_Click"
            Content="SideBar Open" />
    </james:JamesGrid>
</james:DarkThemeWindow>
